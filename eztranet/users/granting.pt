  <h2 i18n:translate="">Permissions pour le projet <i tal:content="context/title">Projet</i></h2>

<p class="status" tal:define="status view/status" tal:condition="status" tal:content="status" i18n:translate=""/>

<tal:block define="roles view/get_eztranet_roles">

<form action="" method="POST">
<table>
<tr>
    <th>Utilisateur</th>
    <th tal:repeat="role roles" tal:content="role/title"></th>
</tr>
<tr tal:repeat="user view/get_all_users">
    <td tal:content="user">user</td>
    <td tal:repeat="role roles" ><input type="checkbox" tal:attributes="name role/id; value user; checked python:view.assigned(role.id,user)" name="role" value="user"/></td>
</tr>
</table>
<input type="submit" name="GRANT_SUBMIT" value="Change" i18n:attributes="value grant-submit" />
</form>


