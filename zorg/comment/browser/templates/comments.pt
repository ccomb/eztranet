<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
<body>
<div metal:fill-slot="body">

   <p tal:condition="view/comments"><span tal:content="python: len(view.comments)">X</span> Commentaires</p>
   <p tal:condition="not: view/comments">Ajouter le premier commentaire</p>
   <div class="page_error" tal:condition="view/error | nothing" tal:content="view/error">error</div>

   <div id="comments" tal:content="structure view/render">

   </div>

   <form action="./@@addcomment.html"
     method="post"
     >


    <div class="row">
      <div class="label" i18n:translate="">Nouveau commentaire</div>
      <div class="field">
        <textarea name="text" rows="5" cols="45"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="controls">
        <input type="submit" name="save" value="Ajouter le commentaire"
            i18n:attributes="value save-comment-button"/>
      </div>
    </div>

  </form>

</div>
</body>
</html>
