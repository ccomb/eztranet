<html metal:use-macro="context/@@standard_macros/page"
      i18n:domain="zope">
<body>
<div metal:fill-slot="body"
     i18n:domain="zope">

<p class="status"
   tal:define="status view/status"
   tal:condition="status"
   tal:content="status"
   i18n:translate=""/>

<tal:block define="roles view/get_eztranet_roles">

<form action=""
      method="POST">

<table>
<tr>
    <th></th>
    <th tal:repeat="role roles"
        tal:content="role/title"></th>
</tr>
<tr tal:repeat="user view/get_all_users">
    <td tal:content="user">
        user
    </td>
    <td tal:repeat="role roles"
            align="center" >
        <input type="checkbox"
               tal:attributes="name role/id;
                               value user;
                               checked python:view.assigned(role.id,user)"
               name="role"
               value="user"
               style="width:25px" />
    </td>
</tr>
</table>
<input type="submit"
       name="GRANT_SUBMIT"
       value="Change"
       i18n:attributes="value grant-submit" />
</form>

</tal:block>

</div>
</body>
</html>
